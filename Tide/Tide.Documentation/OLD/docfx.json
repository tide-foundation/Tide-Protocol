{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.sln", "src/DotnetNew/*.csproj"],
          "exclude": ["**/bin/**", "**/obj/**"],
          "src": "src"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "template": ["default", "templates/tide"],
    "content": [
      {
        "files": ["**/*.yml"],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": ["articles/**/*.md", "*.md", "toc.yml", "restapi/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "Tide Documentation",
      "_enableSearch": true,
      "_disableBreadcrumb": false
    },
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"]
  }
}
